 @model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h4>Products</h4>
<a asp-controller="Product" asp-action="Create" class="btn btn-success">Create Product</a><br/>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
	    {
        <tr>
            <th scope="row">@count</th>
            <td><img src="~/images/@product.Image" alt="Alternate Text" /> </td>
            <td>
                <a class="btn btn-sm btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id"><i class="mdi mdi-pencil"></i></a>
                <a class="btn btn-sm btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"><i class="mdi mdi-delete"></i></a>
            </td>
        </tr>
        count++;
	    }
    </tbody>
</table>